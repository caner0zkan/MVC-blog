@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>
<hr />

<p>
    @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn btn-info" })
</p>
<hr />

@if (TempData["Category"] != null)
{
    var category = (BlogMvcApp.Models.Category)TempData["Category"];

    <div class="alert alert-success">
        <strong>@category.CategoryName</strong> saved.
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:63%">
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th style="width:16%">
            @Html.DisplayNameFor(model => model.BlogCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CategoryName
        </td>
        <td>
            @item.BlogCount
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-warning btn-xs" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
