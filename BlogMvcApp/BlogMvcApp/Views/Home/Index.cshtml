
@model IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="mb-5">My Blogs</h2>


<div class="row">
    <div class="col-md-8">

        @foreach (var blog in Model)
        {
            <div class="blog">
                <h3 class="page-header">
                    @blog.Title
                </h3>
                <p>
                    <span class="glyphicon glyphicon-time"></span>
                    @blog.AddedDate
                </p>
                <hr />
                <img src="~/Content/1.jpg" alt="image" />
                <hr />
                <p>
                    @blog.Comment
                </p>
                @Html.ActionLink("More...","Details","Blog",new {id = blog.Id } ,new {@class = "btn btn-primary mb - 5" })
            </div>
        }

    </div>
    <div class="col-md-4">

    </div>
</div>

