@model IEnumerable<BlogMvcApp.Models.BlogModel>


@if (Model.Count() == 0)
{
<div class="alert alert-warning">
    <h3>
        No Records Found
    </h3>
</div>
}
else
{
    foreach (var blog in Model)
    {
<div class="blog">
    <h3 class="page-header">
        @blog.Title
    </h3>
    <p>
        <span class="glyphicon glyphicon-time"></span>
        @blog.AddedDate
    </p>
    <hr />
    <img src="~/Content/1.jpg" alt="image" style="width:100%" />
    <hr />
    <p>
        @blog.Comment
    </p>
    @Html.ActionLink("More...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary mb-5" })
</div>
    }
}